
.page.data-v-5fe9fe45 {
	min-height: 100vh;
	background-color: #f5f5f5;
}

/* 筛选栏 */
.filter-bar.data-v-5fe9fe45 {
	background-color: #ffffff;
	padding: 20rpx 0;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.filter-scroll.data-v-5fe9fe45 {
	white-space: nowrap;
}
.filter-list.data-v-5fe9fe45 {
	display: inline-flex;
	padding: 0 20rpx;
}
.filter-item.data-v-5fe9fe45 {
	display: inline-block;
	padding: 16rpx 32rpx;
	margin: 0 10rpx;
	background-color: #f5f5f5;
	border-radius: 40rpx;
	transition: all 0.3s;
}
.filter-item.active.data-v-5fe9fe45 {
	background: linear-gradient(135deg, #a8e063 0%, #297512 100%);
}
.filter-text.data-v-5fe9fe45 {
	font-size: 28rpx;
	color: #666666;
	white-space: nowrap;
}
.filter-item.active .filter-text.data-v-5fe9fe45 {
	color: #ffffff;
	font-weight: bold;
}

/* 订单列表 */
.container.data-v-5fe9fe45 {
	padding: 0 30rpx 30rpx;
}
.order-list.data-v-5fe9fe45 {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.order-item.data-v-5fe9fe45 {
	background-color: #ffffff;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header.data-v-5fe9fe45 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 24rpx;
	background-color: #f8f8f8;
	border-bottom: 1rpx solid #f0f0f0;
}
.order-no.data-v-5fe9fe45 {
	font-size: 26rpx;
	color: #666666;
}
.order-status.data-v-5fe9fe45 {
	padding: 6rpx 16rpx;
	border-radius: 20rpx;
	font-size: 22rpx;
	color: #ffffff;
}
.status-pending.data-v-5fe9fe45 {
	background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}
.status-paid.data-v-5fe9fe45 {
	background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
.status-cancelled.data-v-5fe9fe45 {
	background-color: #999999;
}
.status-expired.data-v-5fe9fe45 {
	background-color: #cccccc;
}

/* 订单商品 */
.order-products.data-v-5fe9fe45 {
	padding: 20rpx 24rpx;
}
.product-item.data-v-5fe9fe45 {
	display: flex;
	margin-bottom: 20rpx;
}
.product-item.data-v-5fe9fe45:last-child {
	margin-bottom: 0;
}

/* 修改后的图片CSS，参考确认订单页 */
.product-img.data-v-5fe9fe45 {
	width: 150rpx;
	height: auto;
	max-height: 200rpx;
	border-radius: 12rpx;
	margin-right: 20rpx;
	background-color: #f5f5f5;
	flex-shrink: 0;
	display: block;
}
.product-info.data-v-5fe9fe45 {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.product-name.data-v-5fe9fe45 {
	font-size: 28rpx;
	color: #333333;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.product-price-qty.data-v-5fe9fe45 {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.product-price.data-v-5fe9fe45 {
	font-size: 28rpx;
	font-weight: bold;
	color: #ff4444;
}
.product-qty.data-v-5fe9fe45 {
	font-size: 26rpx;
	color: #999999;
}

/* 订单底部 */
.order-footer.data-v-5fe9fe45 {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 24rpx;
	border-top: 1rpx solid #f0f0f0;
}
.order-amount.data-v-5fe9fe45 {
	display: flex;
	align-items: baseline;
}
.amount-label.data-v-5fe9fe45 {
	font-size: 26rpx;
	color: #666666;
	margin-right: 8rpx;
}
.amount-value.data-v-5fe9fe45 {
	font-size: 32rpx;
	font-weight: bold;
	color: #ff4444;
}
.order-actions.data-v-5fe9fe45 {
	display: flex;
	gap: 16rpx;
}
.action-btn.data-v-5fe9fe45 {
	padding: 12rpx 32rpx;
	border-radius: 40rpx;
	font-size: 26rpx;
	border: none;
	line-height: 1;
	height: auto;
}
.action-btn.data-v-5fe9fe45::after {
	border: none;
}
.cancel-btn.data-v-5fe9fe45 {
	background-color: #f5f5f5;
	color: #666666;
}
.pay-btn.data-v-5fe9fe45 {
	background: linear-gradient(135deg, #a8e063 0%, #297512 100%);
	color: #ffffff;
}
.reorder-btn.data-v-5fe9fe45 {
	background-color: #ffffff;
	color: #666666;
	border: 2rpx solid #e0e0e0 !important;
}

/* 空状态 */
.empty-state.data-v-5fe9fe45 {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	min-height: 80vh;
	padding: 60rpx;
}
.empty-icon.data-v-5fe9fe45 {
	font-size: 160rpx;
	margin-bottom: 30rpx;
}
.empty-text.data-v-5fe9fe45 {
	font-size: 32rpx;
	color: #333333;
	font-weight: bold;
	margin-bottom: 16rpx;
}
.empty-tip.data-v-5fe9fe45 {
	font-size: 26rpx;
	color: #999999;
	margin-bottom: 40rpx;
}
.go-mall-btn.data-v-5fe9fe45 {
	width: 300rpx;
	height: 80rpx;
	background: linear-gradient(135deg, #a8e063 0%, #297512 100%);
	border-radius: 40rpx;
	font-size: 28rpx;
	color: #ffffff;
	border: none;
	line-height: 80rpx;
}
.go-mall-btn.data-v-5fe9fe45::after {
	border: none;
}

/* 加载状态 */
.loading-state.data-v-5fe9fe45 {
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 80vh;
}
.loading-text.data-v-5fe9fe45 {
	font-size: 28rpx;
	color: #999999;
}
