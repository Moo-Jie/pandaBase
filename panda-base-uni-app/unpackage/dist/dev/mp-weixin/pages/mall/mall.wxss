
.page.data-v-6808f5eb {
	min-height: 100vh;
	background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar.data-v-6808f5eb {
	background-color: #ffffff;
	padding: 20rpx 30rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.search-input.data-v-6808f5eb {
	display: flex;
	align-items: center;
	background-color: #f5f5f5;
	border-radius: 50rpx;
	padding: 16rpx 30rpx;
}
.search-icon.data-v-6808f5eb {
	font-size: 32rpx;
	margin-right: 16rpx;
}
.input.data-v-6808f5eb {
	flex: 1;
	font-size: 28rpx;
	color: #333333;
}
.placeholder.data-v-6808f5eb {
	color: #999999;
}

/* 分类栏 */
.category-bar.data-v-6808f5eb {
	background-color: #ffffff;
	padding: 20rpx 0;
	margin-bottom: 20rpx;
}
.category-scroll.data-v-6808f5eb {
	white-space: nowrap;
}
.category-list.data-v-6808f5eb {
	display: inline-flex;
	padding: 0 20rpx;
}
.category-item.data-v-6808f5eb {
	display: inline-block;
	padding: 16rpx 32rpx;
	margin: 0 10rpx;
	background-color: #f5f5f5;
	border-radius: 40rpx;
	transition: all 0.3s;
}
.category-item.active.data-v-6808f5eb {
	background: linear-gradient(135deg, #a8e063 0%, #297512 100%);
}
.category-text.data-v-6808f5eb {
	font-size: 28rpx;
	color: #666666;
	white-space: nowrap;
}
.category-item.active .category-text.data-v-6808f5eb {
	color: #ffffff;
	font-weight: bold;
}

/* 商品区域 */
.product-section.data-v-6808f5eb {
	padding: 0 30rpx 30rpx;
}

/* 推荐横幅 */
.banner-section.data-v-6808f5eb {
	margin-bottom: 30rpx;
}
.banner.data-v-6808f5eb {
	position: relative;
	height: 300rpx;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}
.banner-img.data-v-6808f5eb {
	width: 100%;
	height: 100%;
}
.banner-content.data-v-6808f5eb {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 30rpx;
	background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}
.banner-title.data-v-6808f5eb {
	display: block;
	font-size: 36rpx;
	font-weight: bold;
	color: #ffffff;
	margin-bottom: 8rpx;
}
.banner-desc.data-v-6808f5eb {
	display: block;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.9);
}

/* 商品列表 */
.product-list.data-v-6808f5eb {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 20rpx;
}
.product-card.data-v-6808f5eb {
	background-color: #ffffff;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
	transition: all 0.3s;
}
.product-image-wrapper.data-v-6808f5eb {
	position: relative;
	width: 100%;
	background-color: #f5f5f5;
}
.product-image.data-v-6808f5eb {
	width: 100%;
	height: auto;
	display: block;
}
.product-tag.data-v-6808f5eb {
	position: absolute;
	bottom: 16rpx;
	left: 16rpx;
	background: linear-gradient(135deg, #f9d8ff 0%, #fd8295 100%);
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
}
.tag-text.data-v-6808f5eb {
	font-size: 20rpx;
	color: #ffffff;
	font-weight: bold;
}
.product-info.data-v-6808f5eb {
	padding: 20rpx;
}
.product-name.data-v-6808f5eb {
	display: block;
	font-size: 28rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 8rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.product-desc.data-v-6808f5eb {
	display: block;
	font-size: 24rpx;
	color: #999999;
	margin-bottom: 16rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.product-footer.data-v-6808f5eb {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.price-box.data-v-6808f5eb {
	display: flex;
	align-items: baseline;
}
.price.data-v-6808f5eb {
	font-size: 32rpx;
	font-weight: bold;
	color: #ff4444;
	margin-right: 8rpx;
}
.original-price.data-v-6808f5eb {
	font-size: 22rpx;
	color: #cccccc;
	text-decoration: line-through;
}
.buy-tag.data-v-6808f5eb {
	background: linear-gradient(135deg, #a8e063 0%, #297512 100%);
	padding: 10rpx 20rpx;
	border-radius: 20rpx;
}
.buy-text.data-v-6808f5eb {
	font-size: 22rpx;
	color: #ffffff;
	font-weight: bold;
}

/* 空状态 */
.empty-state.data-v-6808f5eb {
	text-align: center;
	padding: 120rpx 0;
}
.empty-icon.data-v-6808f5eb {
	display: block;
	font-size: 120rpx;
	margin-bottom: 30rpx;
}
.empty-text.data-v-6808f5eb {
	display: block;
	font-size: 28rpx;
	color: #999999;
}

/* 加载状态 */
.loading-state.data-v-6808f5eb {
	text-align: center;
	padding: 60rpx 0;
}
.loading-text.data-v-6808f5eb {
	font-size: 28rpx;
	color: #999999;
}
